<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.belocal.web.repository.TravelThemeRepository">


    <select id="findAll" resultType="kr.co.belocal.web.entity.TravelTheme">
        SELECT *
        FROM
        travel_theme
    </select>


    <select id="findByMemberId" resultType="kr.co.belocal.web.entity.TravelTheme">
        SELECT *
        FROM
        travel_theme
        WHERE
        member_id = #{memberId};
    </select>

    <select id="getLatestIdByMemberId" resultType="Integer">
        SELECT id
        FROM travel_theme
        WHERE member_id = #{memberId}
        ORDER BY reg_date DESC
        LIMIT 1
    </select>

    <insert id="save" parameterType="kr.co.belocal.web.entity.TravelTheme">
        INSERT
        INTO
        travel_theme
        (
         member_id,
         title,
         description,
         bookable_date_start,
         bookable_date_end,
         contact_preferred_time_start,
         contact_preferred_time_end
        )
        VALUES
        (
        #{memberId},
        #{title},
        #{description},
        #{bookableDateStart},
        #{bookableDateEnd},
        #{contactPreferredTimeStart},
        #{contactPreferredTimeEnd}
        )
    </insert>


    <update id="update" parameterType="kr.co.belocal.web.entity.TravelTheme">
        UPDATE
        travel_theme
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="content != null">content = #{content},</if>
            <if test="region != null">region = #{region},</if>
        </set>
        WHERE id = #{id};
    </update>


    <delete id="delete" parameterType="kr.co.belocal.web.entity.TravelTheme">
        DELETE
        FROM
        travel_theme
        WHERE
        id = #{id};
    </delete>


</mapper>