<!--        SELECT *-->
<!--        FROM-->
<!--        travel_theme-->
<!--        WHERE-->
<!--        member_id = #{id}-->
<!--        limit #{offset}, #{size}-->
<!--    </select>-->


    <select id="findAll" resultType="kr.co.belocal.web.entity.TravelThemeView">
        SELECT *
        FROM
        travel_theme_view
        WHERE
        member_id = #{id}
        ORDER BY reg_date DESC
        limit #{offset}, #{size}
    </select>




    <insert id="save" parameterType="kr.co.belocal.web.entity.TravelTheme" useGeneratedKeys="true" keyProperty="id">
        INSERT
        INTO
        travel_theme
        (
         member_id,
         title,
         description,
         bookable_date_start,
         bookable_date_end,
         contact_preferred_time_start,
         contact_preferred_time_end
        )
        VALUES
        (
        #{memberId},
        #{title},
        #{description},
        #{bookableDateStart},
        #{bookableDateEnd},
        #{contactPreferredTimeStart},
        #{contactPreferredTimeEnd}
        )
    </insert>


    <update id="update" parameterType="kr.co.belocal.web.entity.TravelTheme">
        UPDATE
        travel_theme
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="content != null">content = #{content},</if>
            <if test="region != null">region = #{region},</if>
        </set>
        WHERE id = #{id};
    </update>


    <delete id="delete" parameterType="kr.co.belocal.web.entity.TravelTheme">
        DELETE
        FROM
        travel_theme
        WHERE
        id = #{id};
    </delete>






    <!--
'travel_theme 페이지' member Table에서 member_id로 가져올 것들
1. title
2. description
3. is_reserved
4. member_id
-->

</mapper>
















